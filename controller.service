[Unit]
Description=4D Game controller software
After=network.target pigpiod.service
Wants=pigpiod.service
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=always
RestartSec=10
Environment=GAME_MODULE=src/main.py
WorkingDirectory=/home/pi/controller
ExecStart=/usr/bin/python3 $GAME_MODULE
[Install]
WantedBy=multi-user.target